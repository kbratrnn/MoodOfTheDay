<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/PmodResmi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/tarih"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/PmodResmi"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/saat"
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:layout_alignBottom="@+id/tarih"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="170dp"
                android:layout_marginStart="170dp" />

            <TextView
                android:id="@+id/PmodAdi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/paylasilacakResim"
                android:layout_toEndOf="@+id/PmodResmi"
                android:layout_toRightOf="@+id/PmodResmi" />

            <ImageView
                android:id="@+id/paylasilacakResim"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/PmodResmi"
                android:layout_marginTop="35dp"
                android:scaleType="fitXY"
                android:src="@drawable/arkaplan" />

            <TextView
                android:id="@+id/PmodDurumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"

                android:layout_below="@+id/PmodResmi"
                android:layout_marginTop="14dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>










