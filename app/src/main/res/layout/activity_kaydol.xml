<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/arkaplan"
    tools:context="com.example.developer.moodoftheday.ActivityGirisSayfasi">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Üye Ol"
            android:textSize="21sp"
            android:textColor="#c7ffffff"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/IsımEdit"
            android:hint="Ad Soyad"
            android:textColorHint="#9cffffff"
            android:textColor="#fff"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <EditText
            android:id="@+id/KullanıcıAdıEdit"
            android:hint="Kullanıcı Adı"
            android:textColorHint="#9cffffff"
            android:textColor="#fff"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <EditText
            android:id="@+id/EmailEdit"
            android:hint="Email"
            android:textColorHint="#9cffffff"
            android:textColor="#fff"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <EditText
            android:id="@+id/PasswordEdit"
            android:hint="Şifre"
            android:textColorHint="#9cffffff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <EditText
            android:id="@+id/ConfirmPasswordEdit"
            android:hint="Tekrar Şifre"
            android:textColorHint="#9cffffff"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:buttonTint="#fff"
            android:text="Sözleşme Şartlarını Kabul Ediyorum"
            android:textColor="#fff" />

        <Button
            android:id="@+id/NextPage"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:onClick="Onay"
            android:text="Üye Ol"
            android:textColor="#d8ffffff" />

    </LinearLayout>

</RelativeLayout>

